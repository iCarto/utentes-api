<!DOCTYPE html>
<html lang="pt">
  <head>
    <meta charset="utf-8">
    <title>{{title}}</title>
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    {% assets "lib/bootstrap/css/bootstrap.css", "css/login.css", "css/base.css", output="dist/login.css", filters="cssutils" %}
        <link rel="stylesheet" type="text/css" href="{{ ASSET_URL }}">
    {% endassets %}

    <link rel="icon" href="data:;base64,iVBORw0KGgo=">
  </head>

  <body>

    <div class="container">

      <form class="form-signin" method="post" action="{{request.route_url('login')}}">
        <h2 class="form-signin-heading">{{title}}</h2>
        <small>'admin', 'administrativo', 'financieiro', 'secretaria', 'tecnico', 'juridico'</small>
        <input name="user" type="text" class="form-control" placeholder="Utilizador">
        <input name="passwd" type="password" class="form-control" placeholder="Senha">
        <input type="hidden" name="next" value="{{next}}">
        <input type="submit" name="submit" value="Entrar" class="btn btn-large btn-primary">
      </form>

    </div>

    {% assets "lib/jquery/jquery-1.12.0.min.js", "lib/bootstrap/js/bootstrap.min.js", output="dist/login.js", filters="rjsmin" %}
        <script src="{{ ASSET_URL }}"></script>
    {% endassets %}

  </body>
</html>
